<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/main_background_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" />
            <stroke
                android:width="8dp"
                android:color="@color/main_background_color" />
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">

            <corners android:radius="11dp" />
            <stroke
                android:width="1dp"
                android:color="@color/text_color_three" />
        </shape>
    </item>

</layer-list>
