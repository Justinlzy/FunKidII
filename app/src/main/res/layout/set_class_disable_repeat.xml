<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="30dp">

    <include layout="@layout/normal_dialog_arched_top_title_layout" />

    <LinearLayout
        android:id="@+id/rl_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:foreground="@drawable/foreground_shadow"
        android:onClick="onClick"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/dimen_15"
                android:text="@string/week_text_monday"
                android:textColor="@color/text_color_two"
                android:textSize="@dimen/dimen_15sp" />

            <ImageView
                android:id="@+id/check_monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_view_as_badge"
                android:padding="7dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="@color/line_color" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_tuesday"
        android:layout_width="match_parent"
