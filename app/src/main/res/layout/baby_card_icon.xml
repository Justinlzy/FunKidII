<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/side_baby_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/add_baby"
        android:foreground="@drawable/oval_button_foreground_selector" />

    <TextView
        android:id="@+id/side_baby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/side_baby_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:maxEms="4"
        android:singleLine="true"
        android:text="@string/relation"
        android:textColor="@android:color/black"
        android:textSize="13sp" />
</RelativeLayout>