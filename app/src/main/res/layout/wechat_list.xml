<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5"
    android:foreground="@drawable/foreground_shadow"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/wechat_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_10"
        android:src="@drawable/mod_baby_male" />

    <RelativeLayout
        android:id="@+id/wechat_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/wechat_icon"
        android:minHeight="47dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wechat_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_two"
                android:textSize="@dimen/dimen_13sp"
                tools:text="KK的家庭群聊" />

            <TextView
                android:id="@+id/wechat_list_last_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bg_indicator_point_selected"
                android:textSize="@dimen/dimen_10sp"
                tools:text="白市驿镇白龙路106号" />
        </LinearLayout>

        <TextView
            android:id="@+id/wechat_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:textSize="11sp"
            tools:text="2018/07/06 14:12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/wechat_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_toEndOf="@+id/wechat_icon"
        android:background="@color/line_color" />
</RelativeLayout>