<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_Background">

    <TextView
        android:layout_marginTop="@dimen/dimen_30"
        android:id="@+id/tv_lv_item_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/login_select_country"
        android:text="Z"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/dimen_10"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/tv_lv_item_name"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:foreground="@drawable/foreground_shadow"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_20"
        android:text="周华健"
        android:textColor="@color/text_color_three"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/text_color_four"
        android:layout_marginStart="@dimen/dimen_20"
        android:layout_marginEnd="@dimen/dimen_30"/>


</LinearLayout>