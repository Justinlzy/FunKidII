<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:text="@string/notification_setting_tips"
        android:textColor="@color/text_color_four"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_watch_call"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/watch_call"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/watch_call_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_device_activity"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/watch_activity"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/device_activity_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_change_settings"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/change_settings"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/change_settings_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_sos_change"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="SOS"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sos_change_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_contacts_change"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/contacts_change"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/contacts_change_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_15"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_collect_praise_information"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_47"
        android:background="@color/main_background_color">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:text="@string/collect_praise_information"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/collect_praise_information_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:padding="10dp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/track" />
    </RelativeLayout>


</LinearLayout>