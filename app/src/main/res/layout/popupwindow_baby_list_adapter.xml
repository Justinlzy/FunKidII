<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="57dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/baby_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/hard_contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/baby_chosen_badge"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/baby_chosen_icon"
        app:layout_constraintBottom_toBottomOf="@id/baby_head_icon"
        app:layout_constraintEnd_toEndOf="@id/baby_head_icon"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="@id/baby_head_icon"
        app:layout_constraintTop_toTopOf="@+id/baby_head_icon"
        app:layout_constraintVertical_bias="1" />

    <TextView
        android:id="@+id/baby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/baby_head_icon"
        android:gravity="center_horizontal"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/text_color_two"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/baby_head_icon"
        app:layout_constraintStart_toEndOf="@id/baby_head_icon"
        app:layout_constraintTop_toTopOf="@id/baby_head_icon"
        tools:text="千树万树234123412341234213412341234123412341234" />

</android.support.constraint.ConstraintLayout>