<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

    <include layout="@layout/normal_dialog_arched_top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ll_psw_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_5">

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:layout_marginEnd="4dp"
                android:background="@null"
                android:hint="@string/change_password_input_old"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/dimen_15sp" />


            <ImageView
                android:id="@+id/iv_look_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:onClick="onClick"
                android:paddingBottom="8dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:src="@drawable/psw_hide" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/ll_psw_input2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20">


            <EditText
                android:id="@+id/et_psw2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:layout_marginEnd="4dp"
                android:background="@null"
                android:hint="@string/please_input_password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/dimen_15sp" />


            <ImageView
                android:id="@+id/iv_look_psw2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:onClick="onClick"
                android:paddingBottom="8dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:src="@drawable/psw_hide" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/ll_psw_input3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_47"
            android:layout_marginEnd="@dimen/dimen_20"
            android:layout_marginStart="@dimen/dimen_20">


            <EditText
                android:id="@+id/et_psw3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_47"
                android:background="@null"
                android:hint="@string/change_password_confirm"
                android:inputType="textPassword"
                android:maxLength="16"
                android:textSize="@dimen/dimen_15sp" />


            <ImageView
                android:id="@+id/iv_look_psw3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:onClick="onClick"
                android:paddingBottom="8dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:paddingTop="8dp"
                android:src="@drawable/psw_hide" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/line_color" />
    </LinearLayout>

    <include layout="@layout/ok_and_cancel" />
</LinearLayout>