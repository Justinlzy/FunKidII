<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@android:color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_my_data_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_15sp" />
    <LinearLayout
        android:layout_marginTop="@dimen/dimen_15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_apply_bind"
            android:layout_marginStart="15dp"
            android:text="Justin "
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_12sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请成为手表的监护人"
            android:textColor="@color/text_color_two"
            android:textSize="@dimen/dimen_12sp" />
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen_15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bind_btn_ok"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_marginEnd="@dimen/dimen_5"
                android:text="@string/ok"
                android:textColor="@color/text_color_three"
                android:background="@color/main_color_tone"
                android:layout_height="@dimen/dimen_35"/>

            <Button
                android:id="@+id/bind_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/dimen_5"
                android:text="@string/cancel"
                android:textColor="@color/text_color_three" />
        </LinearLayout>
    </LinearLayout>
