<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center">

    <com.cqkct.FunKidII.Ui.view.NumberPickerBlue
        android:id="@+id/start_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_110" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/class_disable_semicolon"
            android:src="@drawable/shape_bg_indicator_point_select" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/class_disable_semicolon"
            android:src="@drawable/shape_bg_indicator_point_select" />
    </LinearLayout>

    <com.cqkct.FunKidII.Ui.view.NumberPickerBlue
        android:id="@+id/start_time_min"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_110" />

</LinearLayout>
