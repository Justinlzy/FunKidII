<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TimePickerDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_20"
    android:paddingEnd="@dimen/dimen_20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_40"
            android:paddingTop="25dp"
            android:paddingEnd="@dimen/dimen_40"
            android:text="@string/other_login_remove_connected"
            android:textColor="@color/text_color_three"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen_40"
            android:paddingEnd="@dimen/dimen_40"
            android:text="@string/other_login_now_you_use_which_login_will_logout"
            android:textColor="@color/text_color_three"
            android:textSize="15sp"
            android:visibility="gone" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_background_color" />


    <include layout="@layout/ok_and_cancel" />
</LinearLayout>