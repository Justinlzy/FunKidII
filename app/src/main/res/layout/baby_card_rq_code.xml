<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TimePickerDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_20"
    android:paddingEnd="@dimen/dimen_20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_bg"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/scan_then_bind"
        android:textColor="@color/text_color_two"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:gravity="center">

        <ImageView
            android:id="@+id/bd_qrc"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unbind_and_bind_device_ID"
            android:textColor="@color/text_color_three"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1231314"
            android:textColor="@color/text_color_three"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_ok_background"
            android:onClick="onDebouncedClick"
            android:paddingStart="@dimen/dimen_25"
            android:paddingTop="@dimen/dimen_5"
            android:paddingEnd="@dimen/dimen_25"
            android:paddingBottom="@dimen/dimen_5"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>