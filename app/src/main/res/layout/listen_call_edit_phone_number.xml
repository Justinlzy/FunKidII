<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TimePickerDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <include layout="@layout/normal_dialog_arched_top_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_color"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/main_background_color"
            android:paddingStart="@dimen/dimen_30"
            android:paddingTop="20dp"
            android:paddingEnd="@dimen/dimen_30"
            android:text="@string/the_number_of_to_listen_tip"
            android:textColor="@color/text_color_six"
            android:textSize="@dimen/dimen_12sp" />


        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color"
            android:gravity="center"
            android:hint="@string/please_input_your_number"
            android:inputType="phone"
            android:maxLength="@integer/maxLength_of_phone_number"
            android:padding="@dimen/dimen_10"
            android:singleLine="true"
            android:textColorHint="@color/normal_primary_text"
            android:textSize="@dimen/dimen_13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dimen_20"
            android:layout_marginEnd="@dimen/dimen_20"
            android:background="@color/line_color" />

    </LinearLayout>

    <include layout="@layout/ok_and_cancel" />

</LinearLayout>