<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@drawable/text_blue_background"
        android:paddingStart="8dp"
        android:paddingTop="1dp"
        android:paddingEnd="8dp"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_18sp"
        tools:text="2018-06-25" />

    <LinearLayout
        android:id="@+id/message_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:id="@+id/select_item"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:checked="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textSize="13sp"
            android:visibility="visible"
            tools:text="14:00" />

        <ImageView
            android:id="@+id/notification_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_10"
            android:background="@drawable/news_incident" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_white_background"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_3"
            android:paddingTop="5dp"
            android:paddingEnd="@dimen/dimen_3">

            <LinearLayout
                android:id="@+id/onBindItemBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_red_two_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/relation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    tools:text="奶奶" />

                <TextView
                    android:id="@+id/bind_requester"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    tools:text="(+8617365227074)" />

            </LinearLayout>

            <TextView
                android:id="@+id/bind_baby_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_1"
                android:textSize="14sp"
                tools:text="请求申请绑定闻人羽" />

            <TextView
                android:id="@+id/bind_baby_device"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_1"
                android:textSize="13sp"
                tools:text="(358588000000155)" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>